<div>
  <h3><%= @customer.name %>さんのページです</h3>
  <p><%= @customer.introduction %></p>
  <%= image_tag @customer.get_profile_image(100,100) %>
  <% if @customer.name != "guest" %>
   <% if @customer == current_customer %>
     <%= link_to "プロフィール編集", edit_customer_path(@customer) %>
   <% end %>
  <% end %>
</div>

<% if @favorite_list.present? %>
  <% @favorite_list.each do |park| %>
    <%= park.name %>
    <%= image_tag park.get_image(150,150) %>
    <% end %>
<% end %>