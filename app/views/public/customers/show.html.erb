<div class="container px-5 px-sm-0">
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <div class="col-md-3 mt-5">
      <h2>
        <%= @customer.name %>さんの<br>
        ページです
      </h2>

      <table class='table'>
        <tr><%= image_tag @customer.get_profile_image(100,100) %></tr>

        <tr>
	        <th>name</th>
	        <th><%= @customer.name %></th>
        </tr>

        <tr>
	        <th>introduction</th>
	        <th><%= @customer.introduction %></th>
        </tr>
        <tr>
          <th class = "mx-auto">
          <% if @customer.name != "guest" %>
             <% if @customer == current_customer %>
               <%= link_to "編集", edit_customer_path(@customer), class: "btn btn-outline-success" %>
             <% end %>
          <% end %>
          </th>
        </tr>
        <% if @customer.name != "guest" %>
        <% if @customer == current_customer %>
        <tr>
          <th>
               <%= link_to "会員削除", customer_path(@customer), method: :delete, class: "btn btn-outline-danger", "data-confirm" => "本当に削除しますか？""削除した場合、データは全て消去されます。"  %>
          </th>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>

    <%= render 'layouts/favorites_list' %>

    </div>
  </div>
</div>