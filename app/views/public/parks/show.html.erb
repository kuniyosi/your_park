<div>
  <%= image_tag @park.get_image(200,200) %>
  <p>公園名：<%= @park.name %></p>
  <p>
    エリア：<%= link_to @park.area, search_park_path(keyword: @park.area) %>
  </p>
  <p>住所：<%= @park.address %></p>
  <p>紹介：<%= @park.introduction %></p>
  <p>ポイント：
    <% @park.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </p>
  <% if @park.favorited_by?(current_customer) %>
    <p>
      <%= link_to park_favorites_path(@park), method: :delete do %>
        お気に入りを外す
      <% end %>
    </p>
    <p>お気に入り登録数：<%= @park.favorites.count %></p>
    <% else %>
    <p>
      <%= link_to park_favorites_path(@park), method: :post do %>
        お気に入り登録👍
      <% end %>
    </p>
    <p>お気に入り登録数：<%= @park.favorites.count %></p>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @park.park_comments.count %></p>
  <% @park.park_comments.each do |park_comment| %>
    <p><%= image_tag park_comment.customer.get_profile_image(100,100) %></p>
    <%= park_comment.customer.name %>
    <%= park_comment.created_at.strftime('%Y/%m/%d') %><%= park_comment.comment %>
    <% if park_comment.customer == current_customer  %>
      <%= link_to "削除", park_park_comment_path(park_comment.park, park_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@park, @park_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>