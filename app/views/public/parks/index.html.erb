<div class="container px-5 px-sm-0">

  <div class="row">

    <div class="col-3 my-4">

     <%= render 'public/parks/tag' %>

    </div>

    <div class = "col-9 mt-4">
      <h3 class="mb-4 text-center">公園一覧</h3>
      <p>
       <%= link_to '新しい順', parks_path(latest: "true") %>
       |<%= link_to '古い順', parks_path(old: "true") %>
       |<%= link_to 'お気に入り登録数順', parks_path(favorite: "true") %>
      </p>

      <%= render 'public/parks/parks_index', parks: @parks %>

      <%= paginate @parks %>

    </div>

  </div>

</div>


