<div>
  <%= image_tag @park.get_image %>
  <p>公園名：<%= @park.name %></p>
  <p>紹介：<%= @park.introduction %></p>
  <%= link_to "編集", edit_admin_park_path(@park) %>
  <%= link_to "削除", admin_park_path(@park), method: :delete %>
</div>

<div>
  <p>コメント件数：<%= @park.park_comments.count %></p>
  <% @park.park_comments.each do |park_comment| %>
    <p><%= image_tag park_comment.customer.get_profile_image(100,100) %></p>
    <%= park_comment.customer.name %>
    <%= park_comment.created_at.strftime('%Y/%m/%d') %><%= park_comment.comment %>
    <%= link_to "削除", admin_park_park_comment_path(park_comment.park, park_comment), method: :delete %>
  <% end %>
</div>
