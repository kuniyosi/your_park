<% if parks.empty? %>

  <div class = 'text-center'>
    <p>該当する公園が見つかりませんでした。</p>
  </div>

<% else %>

    <div class="card-group">

      <% @parks.each do |park| %>

      <div class="col-xs-4 col-sm-6">

        <div class="card mx-3 my-3">
        <%= image_tag park.get_image(150,150), class: "bd-placeholder-img card-img-top background-size=cover"  %>
          <div class="card-body column flex-direction:row p-1">
            <h5 class="card-title"><%=link_to park.name,admin_park_path(park.id)  %></h5>
            <p class="card-text"><%= link_to park.area, admin_search_park_path(keyword: park.area) %></p>
            <p class="card-text"><%= render "admin/park_comments/star_average", park: park %></p>
          </div>
        </div>

      </div>

      <% end %>

    </div>

    <div class = "row">
      <div class = "col-xs-4 my-5 mx-auto">
        <%= paginate @parks %>
      </div>
    </div>

<% end %>