<h2>公園情報編集</h2>
<%= form_with model: [:admin, @park] do |f| %>
  <label for="inputName">公園名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"公園名"%>

  <label for="inputIntroduction">紹介文</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%>

  <label for="inputArea">エリア</label>
  <%= f.text_field :area, autofocus: true, id:"inputArea", placeholder:"エリア"%>

  <label for="inputImage">Image</label>
  <%= f.file_field :image, placeholder: "公園写真", accept: "image/*" %>

　<div class='form-group'>
  　<%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
  　　<div class = 'form-check'>
  　　    <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
    　</div>
    <% end %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>

