<div class="container px-5 px-sm-0">
  <div class="row">
    <div class = "col-md-2"></div>
    <div class = "col-md-8 mt-4 text-center">
      <h3 class="mb-4 text-left">会員一覧</h3>

<table class='table table-hover table-inverse table-dark table-striped'>
       <thead>
        <tr class = "text-center">
        <th></th>
        <th>名前</th>
        <th>自己紹介</th>
        </tr>
      </thead>
       <tbody>
<% @customers.each do |customer| %>
<tr class = "mx-auto">
 <td>
  <%= link_to admin_customer_path(customer.id) do %>
    <%= image_tag customer.get_profile_image(100,100) %>
  <% end %>
 </td>
 <td>
   <%=link_to customer.name,admin_customer_path(customer.id)  %>
   </td>
  <td>
    <%= customer.introduction %>
  </td>
</tr>
<% end %>

</tbody>
</table>

</div>
<div class = "col-md-2"></div>
</div>
</div>
